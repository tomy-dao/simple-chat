# Development stage
FROM nginx:alpine

# Install additional tools for development
RUN apk add --no-cache \
    curl \
    vim \
    bash \
    inotify-tools

# Create nginx user if not exists
RUN addgroup -g 1001 -S nginx && \
    adduser -u 1001 -S nginx -G nginx

# Set working directory
WORKDIR /etc/nginx

# Create necessary directories
RUN mkdir -p /var/log/nginx /var/cache/nginx /var/run /etc/nginx/conf.d

# Set proper permissions
RUN chown -R nginx:nginx /var/log/nginx /var/cache/nginx /var/run /etc/nginx

# Expose ports
EXPOSE 80

# Copy startup script
COPY start.sh /start.sh
RUN chmod +x /start.sh

# Start nginx with reload capability
CMD ["/start.sh"]
